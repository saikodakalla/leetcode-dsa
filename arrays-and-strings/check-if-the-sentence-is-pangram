class Solution:
    def checkIfPangram(self, sentence: str) -> bool:
        characters_seen_set = set() # creating a set of characters seen 
        for c in sentence: # iterating through the sentence characters
            characters_seen_set.add(c) # adding each character to the set (set has only unique elements)
        if len(characters_seen_set) == 26: # if the number of unique inputs is 26 return true
            return True
        else: # else return false because we know that there aren't all 26 letters in the string
            return False
            
        
